<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QwiqApp Soft. Sol. Pvt. Ltd.</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
 </head>
<body>
    <!-- Sidebar/menu -->
    <nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar">
        <br>
        <div class="w3-container">
            <a href="#" onclick="w3_close()" class="w3-hide-large w3-right w3-jumbo w3-padding w3-hover-grey" title="close menu">
                <i class="fa fa-remove"></i>
            </a>
        </div>
        <div class="w3-bar-block">
            <ul >
                <li class="w3-bar-item w3-button w3-padding w3-text-teal" style="text-decoration:none" ><i class="fa fa-th-large fa-fw w3-margin-right"></i>@Html.ActionLink("Create Play Slips", "Index", "Home")</li>
                <li class="w3-bar-item w3-button w3-padding w3-text-teal" style="text-decoration:none"><i class="fa fa-th-large fa-fw w3-margin-right"></i>@Html.ActionLink("View Play Slips", "About", "Home")</li>
                <li class="w3-bar-item w3-button w3-padding w3-text-teal" style="text-decoration:none"><i class="fa fa-th-large fa-fw w3-margin-right"></i>@Html.ActionLink("Download Play Slips", "Contact", "Home")</li>
            </ul>
        </div>
    </nav>
    <!--- Main Body Conatint Loading-->
    <div class="w3-main" style="margin-left:300px">
        @RenderBody()
    </div>
</body>
</html>
